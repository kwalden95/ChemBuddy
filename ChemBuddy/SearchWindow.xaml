<Window x:Class="ChemBuddy.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChemBuddy"
        mc:Ignorable="d"
        Title="Search" Height="140" Width="330"
        Background="#424242">
    <StackPanel>
        <TextBlock Text="Search for an element by name or symbol" Margin="10 10 10 5" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
        <Separator Foreground="White" Height="4" Margin="0 0 0 10"/>
        <TextBox Name="SearchTextBox" Margin="50 0 50 0" TextAlignment="Center"/>
        <Button Content="Search" Margin="130 10 130 0" Foreground="White" Background="#282828"/>
    </StackPanel>
</Window>
