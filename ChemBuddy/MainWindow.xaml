            <Rectangle Grid.Row="0" Grid.Column="13" Fill="#282828" Stroke="White"/>
            <TextBlock Text="13" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="13" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="14" Fill="#282828" Stroke="White"/>
            <TextBlock Text="14" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="14" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="15" Fill="#282828" Stroke="White"/>
            <TextBlock Text="15" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="15" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="16" Fill="#282828" Stroke="White"/>
            <TextBlock Text="16" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="16" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="17" Fill="#282828" Stroke="White"/>
            <TextBlock Text="17" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="17" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="18" Fill="#282828" Stroke="White"/>
            <TextBlock Text="18" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="18" Grid.Row="0"/>
            
            <!--#endregion-->

            <!--#region RowNumbers-->
            <Rectangle Grid.Row="1" Grid.Column="0" Fill="#282828" Stroke="White"/>
            <TextBlock Text="1" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"/>

            <Rectangle Grid.Row="2" Grid.Column="0" Fill="#282828" Stroke="White"/>
            <TextBlock Text="2" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2"/>

            <Rectangle Grid.Row="3" Grid.Column="0" Fill="#282828" Stroke="White"/>
            <TextBlock Text="3" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3"/>

            <Rectangle Grid.Row="4" Grid.Column="0" Fill="#282828" Stroke="White"/>
            <TextBlock Text="4" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4"/>

            <Rectangle Grid.Row="5" Grid.Column="0" Fill="#282828" Stroke="White"/>
            <TextBlock Text="5" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5"/>

            <Rectangle Grid.Row="6" Grid.Column="0" Fill="#282828" Stroke="White"/>
            <TextBlock Text="6" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="6"/>

            <Rectangle Grid.Row="7" Grid.Column="0" Fill="#282828" Stroke="White"/>
            <TextBlock Text="7" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="7"/>

            <Rectangle Grid.Row="8" Grid.Column="0" Fill="#282828" Stroke="White"/>
            <TextBlock Text="8" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="8"/>
        <!--#endregion-->
            
            <!--#region Elements-->
            <Button Name="HydrogenButton" Click="HydrogenButton_Click" Grid.Column="1" Grid.Row="1">
                <Image Source="ElementIcons\icon_hydrogen.png" Stretch="Fill"/>
            </Button>
            
            <Button Name="HeliumButton" Click="HeliumButton_Click" Grid.Column="18" Grid.Row="1">
                <Image Source="ElementIcons\icon_helium.png" Stretch="Fill"/>
            </Button>

            <Button Name="LithiumButton" Click="LithiumButton_Click" Grid.Column="1" Grid.Row="2">
                <Image Source="ElementIcons\icon_lithium.png" Stretch="Fill"/>
            </Button>

            <Button Name="BerylliumButton" Click="BerylliumButton_Click" Grid.Column="2" Grid.Row="2">
                <Image Source="ElementIcons\icon_beryllium.png" Stretch="Fill"/>
            </Button>
            <!--#endregion-->

        </Grid>
    </Grid>
</Window>
