<Window x:Class="ChemBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChemBuddy"
        mc:Ignorable="d"
        Title="ChemBuddy" Height="450" Width="800" Background="#424242" WindowState="Maximized">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Left sidebar for the menu items-->
        <StackPanel Background="#282828" Grid.Column="0">
            <Button Name="SearchButton" Click="SearchButton_Click" Margin="5" Padding="3" Background="#424242">
                <Image Source="ToolbarButtons\magnifying-glass-6x.png" Stretch="Fill" Cursor="Hand"/>
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock Text="Search for an element"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <Button Name="ToggleLegendButton" Click="ToggleLegendButton_Click" Margin="5" Padding="3" Background="#424242">
                <Image Source="ToolbarButtons\list-6x.png" Stretch="Fill" Cursor="Hand"/>
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock Text="Show/Hide legend"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>

            <Button Name="ExitButton" Click="ExitButton_Click" Margin="5" Padding="3" Background="#424242">
                <Image Source="ToolbarButtons\x-6x.png" Stretch="Fill" Cursor="Hand"/>
                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock Text="Exit ChemBuddy"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>

                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--#region ColumnNumbers-->
            <Rectangle Grid.Row="0" Grid.Column="1" Fill="#282828" Stroke="White"/>
            <TextBlock Text="1" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="2" Fill="#282828" Stroke="White"/>
            <TextBlock Text="2" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="3" Fill="#282828" Stroke="White"/>
            <TextBlock Text="3" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="4" Fill="#282828" Stroke="White"/>
            <TextBlock Text="4" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="4" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="5" Fill="#282828" Stroke="White"/>
            <TextBlock Text="5" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="5" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="6" Fill="#282828" Stroke="White"/>
            <TextBlock Text="6" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="6" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="7" Fill="#282828" Stroke="White"/>
            <TextBlock Text="7" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="7" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="8" Fill="#282828" Stroke="White"/>
            <TextBlock Text="8" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="8" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="9" Fill="#282828" Stroke="White"/>
            <TextBlock Text="9" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="9" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="10" Fill="#282828" Stroke="White"/>
            <TextBlock Text="10" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="10" Grid.Row="0"/>

            <Rectangle Grid.Row="0" Grid.Column="11" Fill="#282828" Stroke="White"/>
